<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Kullanıcı Bilgileri -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewMyProfileCardProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="48dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/imageViewMyProfileProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logout_icon"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Kullanıcı Adı, Takipçi Sayısı, Takip Edilen Sayısı -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewMyProfileCardProfile"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <!-- Kullanıcı Adı -->
            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kullanıcı Adı"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Takipçi Sayısı -->

                <TextView
                    android:id="@+id/textViewFollowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewUsername"
                    android:layout_marginTop="8dp"
                    android:text="Takipçi: 0"
                    android:textStyle="bold"/>

                <!-- Takip Edilen Sayısı -->
                <TextView
                    android:id="@+id/textViewFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewFollowers"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Takip Edilen: 0"
                    android:textStyle="bold"/>



            </LinearLayout>





            <!-- Takip Et Butonu -->
            <Button
                android:id="@+id/btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
                android:text="Takip Et" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Paylaşılan Gönderiler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"/>

</LinearLayout>
